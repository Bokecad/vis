/**index.wxss**/
.userInfo{
  width: 90%;
  padding: 0 10px;
  height: 70px;
  /* background: red; */
  margin:16px auto 0;
  font-size: 14px;
}
.userInfo .avatar,.content,.edit{
  float: left;
}
.userInfo .avatar{
  width: 20%;
  text-align: center;
}
/*userInfo content  */
.userInfo .content{
  width: 60%;
}
.userInfo .content .left,.right{
  width: 50%;
  float: left;
}

.userInfo .edit{
  width: 20%;
}
/*公告  */
.userInfo .announcement{
  clear: both;
  border-top:1px solid #000;
  padding-top: 10px;
}
.userInfo .avatar image{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  
}